{{ header }}
<div id="product-category" class="container-fluid">
  <row>
    <div class="col-md-12">
      <h3 class="ban-top-cat" align="center">{{ text_letter_category }}&nbsp;&nbsp;<a href="#newspopup" class="button-news-popup">{{ text_button_letter }}</a></h3>
    </div>
  </row>  
  <div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  </div>
  {{ content_top }}
  <div class="row">  {{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">  
      {% if products %}
      <div class="row">
        <div class="col-md-4"><h1>{{ heading_title }}</h1></div>
        <div class="col-md-2 hidden-xs">
          <div class="btn-group btn-group-sm">
            <button type="button" id="list-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button>
            <button type="button" id="grid-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button>
          </div>
        </div>
        <div class="col-md-2 hidden-xs">
          <div class="form-group"><a href="{{ compare }}" id="compare-total" class="btn btn-link">{{ text_compare }}</a></div>
        </div>

        <div class="col-md-2 hidden-xs">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon input-limit" for="input-limit">{{ text_limit }}</label>
            <select id="input-limit" class="form-control" onchange="location = this.value;">
              
              
              
              {% for limits in limits %}
              {% if limits.value == limit %}
              
              
              
              <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
              
              
              
              {% else %}
              
              
              
              <option value="{{ limits.href }}">{{ limits.text }}</option>
              
              
              
              {% endif %}
              {% endfor %}
            
            
            
            </select>
          </div>
        </div>

        <div class="container-sort col-md-2">
          <div class="out-pan">
            <span>{{ text_sort }}</span>
            <a class="clos-sort" href="#sub-sort" class="btn btn-default" data-toggle="collapse"></a>
          </div>
          <div id="sub-sort" class="sub-sort collapse">
             


              
              
              
              {% for sorts in sorts %}
              {% if sorts.value == '%s-%s'|format(sort, order) %}
              
              
              
              <div class="radio-cat">
                <input value="{{ sorts.href }}" class="selected custom-radio" type="radio" id="{{ sorts.text }}" onchange="location = this.value;">
                <label class="input-group-addon" for="{{ sorts.text }}">{{ sorts.text }}</label>
              </div>
              
              
              {% else %}
              
              
              
            <div class="radio-cat">
              <input value="{{ sorts.href }}" class="selected custom-radio" type="radio" onchange="location = this.value;">
              <label class="input-group-addon" for="{{ sorts.text }}">{{ sorts.text }}</label>
            </div>
              
              
              {% endif %}
              {% endfor %}
            
            
            


          
          </div>
        </div>






      </div>
      <div class="row category-content-thumb"> {% for product in products %}
        <div class="product-layout product-list col-lg-3 col-md-3 col-xs-12">
          <div class="product-thumb">
            <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
            <div>
              <div class="caption">
                <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                <p>{{ product.description }}</p>
                {% if product.price %}
                <p class="price"> {% if not product.special %}
                  {{ product.price }}
                  {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
                  {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} </p>
                {% endif %}
                {% if product.rating %}
                <div class="rating"> {% for i in 1..5 %}
                  {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>{% endif %}
                  {% endfor %} </div>
                {% endif %} </div>
              <div class="button-group">
                <button type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs">{{ button_cart }}</span></button>
                <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                <button type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
              </div>
            </div>
          </div>
        </div>
        {% endfor %} 
      </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      <hr>
      {% endif %}
      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
            {% if description %}
      <div class="col-sm-12">{{ description }}</div>
      {% endif %} 
      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 

<!--News попап-->
<div class="hidden">
  <div id="newspopup" class="news-popup">
    <img src="image/catalog/banners/skidka-na-novinki-iamtoko.png" alt="Скидка 20% на новинки">
    <div class="left-newspopup">{{ text_left_news }}</div>
    <div class="bottom-newspopup">{{ text_bottom_news }}</div>
    <div class="button-newspopup-see"><a href="index.php?route=information/information&information_id=15">{{ text_button_news_see }}</a ></div>
    <div class="button-newspopup"><a href="#form-newspopup" class="button-news-popup">{{ text_button_news }}</a></div>
  </div>
</div>

<div class="hidden">
  <div id="form-newspopup" class="form-news-popup">
    <div class="bordered_content padded box newsletter_module">
      <div id="respond" class="{{ module }}"></div>
      <div class="input-group">
        <input  type="text" id="email" name="email" class="form-control" placeholder="{{ entry_email }}" />
        <span id="button-subscribe" class="input-group-addon btn btn-primary">
        <i>
          <svg viewBox="0 0 30 30" width="30" height="30">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="catalog\view\theme\iamtoko\image\sprite.svg#icon-mail"></use>
          </svg>
        </i>
        </span>
      </div>
    </div>  
  </div>
</div>



